<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="jork.juger.roundedimageview.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <jork.juger.roundedimageview.RoundedImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/logo"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:text="@string/corners_radius"/>

            <SeekBar
                android:id="@+id/radius"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="@integer/max_radius_value"
                android:padding="4dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:text="@string/top_left_radius"/>

            <SeekBar
                android:id="@+id/topLeftRadius"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="@integer/max_radius_value"
                android:padding="4dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:text="@string/top_right_radius"/>

            <SeekBar
                android:id="@+id/topRightRadius"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="@integer/max_radius_value"
                android:padding="4dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:text="@string/bottom_right_radius"/>

            <SeekBar
                android:id="@+id/bottomRightRadius"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="@integer/max_radius_value"
                android:padding="4dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:text="@string/bottom_left_radius"/>

            <SeekBar
                android:id="@+id/bottomLeftRadius"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="@integer/max_radius_value"
                android:padding="4dp"/>

            <Button
                android:id="@+id/circle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/to_circle"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
